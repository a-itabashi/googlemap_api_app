<%= form_with(model: @picture, url: choose_new_or_edit, local: true) do |form| %>
  <% if @picture.errors.any? %>
    <div id = "error_explnation">
      <h2><%= @picture.errors.count %>件のエラーがあります。</h2>
        <ul>
          <% @picture.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
       </ul>
    </div>
  <% end %>

  <div class = "pic_content">
    <%= form.label :content %>
    <%= form.text_field :content, class: "form-control" %>
    <%= form.label :latitude %>
    <%= form.text_field :latitude, class: "form-control" %>
    <%= form.label :longitude %>
  　<%= form.text_field :longitude, class: "form-control" %>
    <%= form.file_field :image %>
    <%= form.hidden_field :image_cache %>
    <%= form.submit :class => "button" %>
  </div>
<% end %>
